@model BookStore.Models.SACH

@{
    ViewBag.Title = "XoaSach";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center">XÓA SÁCH</h2>

<div class="container mt-4">
    <h3>Are you sure you want to delete this?</h3>

    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Masach)</dt>
        <dd>@Html.DisplayFor(model => model.Masach)</dd>

        <dt>@Html.DisplayNameFor(model => model.Tensach)</dt>
        <dd>@Html.DisplayFor(model => model.Tensach)</dd>

        <!-- Hiển thị các thông tin khác cần xem trước khi xóa -->
    </dl>

    @using (Html.BeginForm("XoaSach", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <button type="submit" value="Delete" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Sach", "Admin")" class="btn btn-secondary ml-2">Cancel</a>
    }
</div>
